<h1>All Users</h1>
<a class="btn btn-primary mb-1" href="/createShel">Create Shelter</a>
<a class="btn btn-primary mb-1" href="/login">Login</a>
<table class="table table-light table-striped table-hover table-bordered border-secondary align-middle">
  <thead>
    <tr class="text-center text-secondary align-middle">
      <th scope="col">#</th>
      <th scope="col">NameShelter</th>
      <th scope="col">City</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      {{#each shelters}}
    <tr class="text-center text-secondary align-middle">
      <th scope="row">{{this.id}}</th>
      <td>{{this.nameShelter}}</td>
      <td>{{this.city}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
    
      <td>
        <a class ="btn btn-primary" href="/user/{{this.id}}">view</a>
        <a class ="btn btn-success" href="#">edit</a>
        <a class ="btn btn-danger" href="#">delete</a>
    </td>
    </tr>
    {{/each}}
   
  </tbody>
</table>